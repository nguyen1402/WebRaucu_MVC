@using Webbanraucu_Ass.Extention
@model Webbanraucu_Ass.ModelsView.XemDonHang

<h2> Thông tin đơn hàng : #@Model.DonHang.OrderID</h2>
<h4> Trạng thái đơn hàng : @Model.DonHang.TransacStatus.Status</h4>
<h4> Tổng tiền : @Model.DonHang.TotoMoney.ToVnd()</h4>

<div class="table-responsive">
    <table class="table table-hover e-commerce-table">
        <thead>
            <tr>
                <th>No</th>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành Tiền</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                int a = 1;
                foreach (var iteam in Model.ChiTietDonHang)
                {

                    <tr>
                        <td><a class="account-order-id" href="javascript:void(0)">@a</a></td>
                        <td>@iteam.Products.ProductName</td>
                        <td>@iteam.Quantity</td>
                        <td>@iteam.Products.Price.ToVnd()</td>
                        <td>@iteam.TotalMoney.ToVnd()</td>
                    </tr>
                    a++;
                }
            }
        </tbody>
    </table>
</div>

